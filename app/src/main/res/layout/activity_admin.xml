<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminActivity">

    <Button
        android:id="@+id/attractionsButton"
        android:layout_width="145dp"
        android:layout_height="47dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="138dp"
        android:onClick="attractionsPressed"
        android:text="Attractions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tripsbutton"
        android:layout_width="145dp"
        android:layout_height="47dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="28dp"
        android:onClick="tripsPressed"
        android:text="Trips"
        app:layout_constraintBottom_toTopOf="@+id/facilitiesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attractionsButton" />

    <Button
        android:id="@+id/facilitiesButton"
        android:layout_width="145dp"
        android:layout_height="47dp"
        android:layout_marginStart="138dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="388dp"
        android:onClick="facilitiesPressed"
        android:text="facilities"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>