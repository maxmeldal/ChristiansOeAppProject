<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeActivity">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_margin="0dp"
        tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                    android:id="@+id/natureTheme"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    android:layout_margin="0dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:layout_centerInParent="true"
                                android:src="@drawable/natur_theme" />
                    </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/historyTheme"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="0dp"
                android:layout_width="0dp"
                android:layout_height="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/history_theme"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/warTheme"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/war_theme"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/otherTheme"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/down_arrow"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>
            </androidx.cardview.widget.CardView>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>